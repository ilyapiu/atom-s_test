<%= form_with model: [@category, @service] do |f| %>
  <div class="mb-4 mt-4 ">
  <%= f.label :title, class:'form-label'%>
  <%= f.text_field :title, class: 'form-control'  %>
  </div> 

<div class="mb-4 mt-4 ">
  <%= f.label :price, class:'form-label'%>
  <%= f.number_field :price, class: 'form-control'  %>
  </div>


  <div class="mb-4">
  <%= f.label :workers, class:'form-label'%>
  <%= f.collection_select :worker_ids, workers, :id, :name, {}, multiple: true, class: 'form-control' %>
  </div>

  <div class="mb-4">
  <%= f.submit "Добавить услугу", class:'btn btn-primary'%>
  </div>
<%end%>