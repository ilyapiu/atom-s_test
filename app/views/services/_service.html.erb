<%= tag.article class: 'mb-3 card', id: dom_id(service) do %>
  <div class="card-body">

      <div class="mt-2 mb-3">
        <p class="card-title"><%= service.title + " Цена: " + service.price.to_s%>&#8381;</p>
         <%= service.workers.first.name%>
      </div>
    </section>

    <%= link_to 'Edit', edit_category_service_path(@category, service), 
      class: 'btn btn-info btn-sm' %>
    <%= link_to 'Delete', category_service_path(@category, service), class: 'btn btn-danger btn-sm',
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
<% end %>