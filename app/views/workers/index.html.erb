<div class="p-5 mb-4 bg-light rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold">Учет персонала</h1>
    <p class="col-md-8 fs-4">На этой странице можно добавить и редактировать персонал </p>
    <%= link_to "Добавить нового работника", new_worker_path, class: 'btn btn-primary btn-lg'%>
  </div>
</div>

<% @workers.each do |worker| %>
  <div class="card mt-4" style="width: 18rem;">
    <%= image_tag worker.photo, class:"card-img-top"%>
    <div class="card-body">
      <h5 class="card-title"><%= worker.name%></h5>
      <h6 class="card-subtitle mb-2 text-muted"> <%= worker.position%></h6>
      <%= link_to "Редактировать", edit_worker_path(worker), class:"btn btn-warning"%>
      <%= link_to "Удалить", worker_path(worker), data:{turbo_method: :delete, turbo_confirm:"Вы уверены?"}, class:"btn btn-danger"%>
    </div>
  </div>
<%end%>